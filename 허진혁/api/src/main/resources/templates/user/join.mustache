{{>layouts/header}}
<div id="posts_list">
    <div class="container col-md-4">
        <form action="/auth/join" method="post">
            <div class="form-group">
                <label>아이디</label>
                <input type="text" name="username" value="{{#request}}{{request.username}}{{/request}}"
                       class="form-control" placeholder="아이디를 입력해주세요">
            </div>

            <div class="form-group">
                <label>비밀번호</label>
                <input type="text" name="password" value="{{#request}}{{request.password}}{{/request}}"
                       class="form-control" placeholder="패스워드를 입력해주세요">
            </div>

            <div class="form-group">
                <label>닉네임</label>
                <input type="text" name="nickname" value="{{#request}}{{request.nickname}}{{/request}}"
                       class="form-control" placeholder="닉네임를 입력해주세요">
            </div>

            <div class="form-group">
                <label>이메일</label>
                <input type="text" name="email" value="{{#request}}{{request.email}}{{/request}}"
                       class="form-control" placeholder="이메일를 입력해주세요">
            </div>
            <button type="submit" class="btn btn-primary">회원가입</button>
        </form>

    </div>
</div>
{{>layouts/footer}}