{{> layouts/header}}
{{# article}}
<div id="wrapper" class="container mt-3">
    <div id="pageTitle">
        <h1>게시글 상세정보</h1>
    </div>
    <form>
        <div class="form-group mb-3">
            <label for="titleInput" class="form-label">Title</label>
            <input type="text" class="form-control" name="title" id="title" value="{{ title }}" readonly>
        </div>
        <div class="form-group mb-3">
            <label for="writerInput" class="form-label">Writer</label>
            <input type="text" class="form-control" name="writer" id="writer" value="{{ writer }}" readonly>
        </div>
        <div class="form-group mb-3">
            <label for="contentInput" class="form-label">Content</label>
            <textarea class="form-control" id="content" name="content" rows="15" readonly>{{ content }}</textarea>
        </div>
        <div class="d-flex justify-content-end">
            <button class="btn btn-outline-danger me-3" onclick="history.go(-1)">Back</button>
            <a class="btn btn-outline-primary me-3" href="/articles/modify" role="button">Modify</a>
            <a class="btn btn-outline-warning me-3" href="/articles/delete" role="button">Delete</a>
        </div>
    </form>
</div>
{{/ article}}
{{> layouts/footer}}